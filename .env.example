# =============================================================================
# EventMan Environment Configuration
# =============================================================================
# Copy this file to '.env' and update the values for your environment
#
# STORAGE STRATEGIES:
# 1. Development: Set CLOUDINARY_ENABLED=false (uses local storage + WhiteNoise)
# 2. Production: Set CLOUDINARY_ENABLED=true (uses Cloudinary + intelligent fallback)
# 3. Testing: Set FORCE_WHITENOISE=true (forces WhiteNoise for all files)
#
# =============================================================================

# --- Django Core Settings ---
# Django's secret key (CRITICAL: KEEP THIS SECRET AND UNIQUE!)
SECRET_KEY='YOUR_SECRET_KEY'

# Set to 'True' for development, 'False' for production
DEBUG=True

# Comma-separated list of hosts/domains that this Django site can serve.
# No spaces around commas
ALLOWED_HOSTS=127.0.0.1,localhost,*

# Trusted origins for CSRF protection. No spaces around commas.
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000

# Internal IPs for Django Debug Toolbar. No spaces around commas.
INTERNAL_IPS=127.0.0.1

# --- Database Configuration ---
# PostgreSQL database URL (e.g., from ElephantSQL, Supabase, Render PostgreSQL)
# Example: postgresql://user:password@host:port/dbname
DATABASE_URL=''

# --- Redis Configuration (for Caching and Real-time Features) ---
# Redis URL (e.g., from Upstash Redis, Redis Cloud)
REDIS_URL=''
# Redis Token/Password (if required by your Redis provider)
REDIS_TOKEN=''

# --- Cloudinary Configuration (for Media File Storage) ---
# Required for cloud media storage - get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=''
CLOUDINARY_API_KEY=''
CLOUDINARY_API_SECRET=''
# Enable/disable Cloudinary (set to false to use local storage + WhiteNoise fallback)
CLOUDINARY_ENABLED=true

# --- Email Configuration (for SMTP) ---
# Email host (e.g., smtp.gmail.com)
EMAIL_HOST=''
# Email port (e.g., 587 for TLS)
EMAIL_PORT=587
# Email host user (your email address)
EMAIL_HOST_USER=''
# Email host password (your email password or app-specific password)
EMAIL_HOST_PASSWORD=''
# Whether to use TLS for email connection (True/False)
EMAIL_USE_TLS=True
# Default email address for sending emails
DEFAULT_FROM_EMAIL='webmaster@localhost'
# Contact form recipient email
CONTACT_EMAIL='admin@eventman.com'

# --- Static Files & Storage Configuration ---
# Set to true to force WhiteNoise for static files (useful for testing Cloudinary fallback)
FORCE_WHITENOISE=false
# Custom domain for CSRF trusted origins (if using custom domain)
CUSTOM_DOMAIN=''

# --- Deployment Platform Settings ---
# Set to 'true' if deploying on Render.com
RENDER=false
# Set to '1' if deploying on Vercel
VERCEL=0
# External hostname for Render custom domains
RENDER_EXTERNAL_HOSTNAME=''

# --- JWT Settings (if applicable) ---
# JWT Access Token Lifetime in minutes
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
# JWT Refresh Token Lifetime in days
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1

# --- SSLCommerz Configuration ---
SSLCOMMERZ_STORE_ID=''
SSLCOMMERZ_STORE_PASS=''
SSLCOMMERZ_IS_SANDBOX=True
