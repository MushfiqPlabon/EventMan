# --- Django Core Settings ---
# Django's secret key (CRITICAL: KEEP THIS SECRET AND UNIQUE!)
SECRET_KEY='YOUR_SECRET_KEY'

# Set to 'True' for development, 'False' for production
DEBUG=True

# Comma-separated list of hosts/domains that this Django site can serve.
# No spaces around commas
ALLOWED_HOSTS=127.0.0.1,localhost,*

# Trusted origins for CSRF protection. No spaces around commas.
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000

# Internal IPs for Django Debug Toolbar. No spaces around commas.
INTERNAL_IPS=127.0.0.1

# For PostgreSQL:
# DATABASE_URL=postgresql://