<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Event Management System{% endblock %}</title>
    <!-- Link to Tailwind CSS generated by Vite -->
    {% load static %} {# Load the static files tag #}
    <link rel="stylesheet" href="{% static 'dist/output.css' %}"> {# Link to your compiled CSS from Vite's output #}
</head>
<body class="bg-gray-50 dark:bg-gray-800 text-gray-800 dark:text-gray-200 font-sans antialiased">
    <header>
        <nav class="bg-blue-600 shadow-lg sticky top-0 z-50">
            <div class="container mx-auto px-4">
                <div class="flex justify-between items-center h-16">
                    <a href="{% url 'home' %}" class="text-white text-2xl font-bold hover:text-blue-200 transition-colors duration-200">
                        EventMan
                    </a>
                    
                    <div class="hidden md:flex items-center space-x-1">
                        <a href="{% url 'home' %}" class="nav-link {% if request.resolver_match.url_name == 'home' %}nav-link-active{% endif %}">Home</a>
                        <a href="{% url 'event_list' %}" class="nav-link {% if request.resolver_match.url_name == 'event_list' %}nav-link-active{% endif %}">Events</a>
                        <a href="{% url 'category_list' %}" class="nav-link {% if request.resolver_match.url_name == 'category_list' %}nav-link-active{% endif %}">Categories</a>
                        
                        {% if user.is_authenticated %}
                            <a href="{% url 'dashboard_redirect' %}" class="nav-link {% if 'dashboard' in request.resolver_match.url_name %}nav-link-active{% endif %}">Dashboard</a>
                            <div class="flex items-center ml-4 space-x-3">
                                <span class="text-white text-sm">Welcome, {{ user.first_name|default:user.email|truncatechars:15 }}!</span>
                                <form action="{% url 'account_logout' %}" method="post" class="inline">
                                    {% csrf_token %}
                                    <button type="submit" class="btn-danger text-sm py-2 px-4">Logout</button>
                                </form>
                            </div>
                        {% else %}
                            <a href="{% url 'account_login' %}" class="nav-link">Login</a>
                            <a href="{% url 'account_signup' %}" class="btn-primary text-sm py-2 px-4 ml-2">Register</a>
                        {% endif %}
                    </div>
                    
                    <!-- Mobile menu button -->
                    <button id="mobile-menu-button" class="md:hidden text-white hover:text-blue-200 focus:outline-none">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
                
                <!-- Mobile menu -->
                <div id="mobile-menu" class="hidden md:hidden pb-4">
                    <div class="flex flex-col space-y-2">
                        <a href="{% url 'home' %}" class="nav-link">Home</a>
                        <a href="{% url 'event_list' %}" class="nav-link">Events</a>
                        <a href="{% url 'category_list' %}" class="nav-link">Categories</a>
                        {% if user.is_authenticated %}
                            <a href="{% url 'dashboard_redirect' %}" class="nav-link">Dashboard</a>
                            <div class="pt-2 border-t border-blue-500">
                                <p class="text-white text-sm mb-2">{{ user.first_name|default:user.email }}</p>
                                <form action="{% url 'account_logout' %}" method="post">
                                    {% csrf_token %}
                                    <button type="submit" class="btn-danger text-sm py-2 px-4 w-full">Logout</button>
                                </form>
                            </div>
                        {% else %}
                            <a href="{% url 'account_login' %}" class="nav-link">Login</a>
                            <a href="{% url 'account_signup' %}" class="btn-primary text-sm py-2 px-4 text-center">Register</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>
    </header>
        
    <main class="container mx-auto mt-8 p-4">
        {% block content %}
        <!-- Page specific content will go here -->
        {% endblock %}
    </main>

    <footer class="mt-12 p-4 bg-gray-200 dark:bg-gray-800 text-center text-gray-600 dark:text-gray-400">
        <div class="container mx-auto">
            &copy; {% now "Y" %} Event Management System. All rights reserved.
        </div>
    </footer>

    <!-- Dark Mode Toggle -->
    <aside>
    <button id="darkModeToggle" class="fixed bottom-4 right-4 bg-gray-700 text-white p-3 rounded-full shadow-lg hover:bg-gray-600 transition duration-300 focus:outline-none z-40">ðŸŒ“</button>
    {# Link to your JavaScript #}
    <script src="{% static 'src/js/dark-mode.js' %}" defer></script>
    <script>
        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>
    </aside>
</body>
</html>