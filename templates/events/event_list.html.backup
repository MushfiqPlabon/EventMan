{% extends "base.html" %}
{% load i18n %}

{% block title %}{% trans "Event List" %}{% endblock %}

{% block content %}
<div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-6">{% trans "All Events" %}</h1>

    {# Search and Filter Form #}
    <form method="GET" action="{% url 'event_list' %}" class="mb-8 p-4 bg-gray-50 dark:bg-gray-700 rounded-md shadow-inner grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
        <div class="col-span-1 md:col-span-2">
            <label for="search_query" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Search Events:</label>
            <input type="text" id="search_query" name="q" value="{{ current_query|default:'' }}"
                   placeholder="Search by name or location..."
                   class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline
                          dark:bg-gray-600 dark:text-gray-200 dark:border-gray-500">
        </div>

        <div>
            <label for="filter_status" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Filter by Status:</label>
            <select id="filter_status" name="status"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline
                           dark:bg-gray-600 dark:text-gray-200 dark:border-gray-500">
                <option value="">All</option>
                <option value="upcoming" {% if current_status == 'upcoming' %}selected{% endif %}>Upcoming</option>
                <option value="past" {% if current_status == 'past' %}selected{% endif %}>Past</option>
            </select>
        </div>

        <div>
            <label for="filter_category" class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2">Filter by Category:</label>
            <select id="filter_category" name="category"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline
                           dark:bg-gray-600 dark:text-gray-200 dark:border-gray-500">
                <option value="">All Categories</option>
                {% for category in categories %}
                    <option value="{{ category.name }}" {% if current_category == category.name %}selected{% endif %}>{{ category.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="col-span-full flex flex-col sm:flex-row justify-end space-y-2 sm:space-y-0 sm:space-x-2">
            <button type="submit" class="w-full sm:w-auto bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md transition duration-300">Apply Filters</button>
            <a href="{% url 'event_list' %}" class="w-full sm:w-auto bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-md transition duration-300">Clear Filters</a>
        </div>
    </form>

    {# Event List Display #}
    {% if events %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for event in events %}
                <div class="card card-hover">
                    {% if event.image %}
                        <img src="{{ event.image.url }}" alt="{{ event.name }}" class="w-full h-48 object-cover">
                    {% endif %}
                    <div class="card-body">
                        <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200 mb-3">{{ event.name }}</h2>
                        <div class="space-y-2 mb-4">
                            <p class="text-gray-600 dark:text-gray-400 text-sm flex items-center">
                                <span class="font-medium w-20">📅 Date:</span> {{ event.date|date:"M d, Y" }}
                            </p>
                            <p class="text-gray-600 dark:text-gray-400 text-sm flex items-center">
                                <span class="font-medium w-20">🕒 Time:</span> {{ event.time|time:"P" }}
                            </p>
                            <p class="text-gray-600 dark:text-gray-400 text-sm flex items-center">
                                <span class="font-medium w-20">📍 Location:</span> {{ event.location }}
                            </p>
                            <p class="text-gray-600 dark:text-gray-400 text-sm flex items-center">
                                <span class="font-medium w-20">🏷️ Category:</span> {{ event.category.name|default:"N/A" }}
                            </p>
                        </div>
                        <p class="text-gray-700 dark:text-gray-300 text-sm mb-4 line-clamp-3">{{ event.description|truncatewords:20 }}</p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-500 dark:text-gray-400">
                                👥 {{ event.participants.count }} participant{{ event.participants.count|pluralize }}
                            </span>
                            <a href="{% url 'event_detail' event.pk %}" class="btn-primary text-sm py-2 px-4">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-12">
            <div class="text-6xl mb-4">😔</div>
            <p class="text-gray-700 dark:text-gray-300 text-lg">No events found matching your criteria.</p>
            <a href="{% url 'event_list' %}" class="btn-primary mt-4">Clear Filters</a>
        </div>
    {% endif %}
</div>
{% endblock %}