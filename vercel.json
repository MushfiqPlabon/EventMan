{
  "version": 2,
  "builds": [
    {
      "src": "eventMan/wsgi.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.12" }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "eventMan/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "eventMan.settings",
    "PYTHONPATH": "$PYTHONPATH:."
  },
  "functions": {
    "eventMan/wsgi.py": {
      "maxDuration": 30
    }
  }
}
